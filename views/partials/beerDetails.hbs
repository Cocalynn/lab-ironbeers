   <div class="d-flex flex-row">
   <img src="{{this.image_url}}">
   <div>
    <h3>{{this.name}}</h3>
    <p class="font-italic">{{this.tagline}}</p>
    <p>{{this.description}}</p>
    <h5>Food Pairing</h5>
    <ul>
        {{#each this.food_pairing}}
        <li>{{this}}</li>
        {{/each}}
    </ul>
    <h5>Brewers Tips:</h5>
    <p>
         {{this.brewers_tips}}
    </p>
   </div>
   </div>